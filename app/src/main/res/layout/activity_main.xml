<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <Button
        android:id="@+id/goToNotifyButton"
        android:layout_width="98dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:text="@string/go_to_notifications"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/waterButton"
        android:layout_width="127dp"
        android:layout_height="135dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="null"
        android:contentDescription="@string/water_me_button"
        android:scaleType="fitCenter"
        android:src="@drawable/button"
        android:text="@string/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToNotifyButton" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="171dp"
        android:layout_height="528dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/plant1" />

    <ImageButton
        android:id="@+id/dayOne"
        android:layout_width="59dp"
        android:layout_height="120dp"
        android:layout_marginTop="544dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="null"
        android:scaleType="fitCenter"
        android:src="@drawable/circle"
        android:text="@string/button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToNotifyButton" />

    <ImageButton
        android:id="@+id/dayTwo"
        android:layout_width="59dp"
        android:layout_height="120dp"
        android:layout_marginTop="544dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="null"
        android:scaleType="fitCenter"
        android:src="@drawable/circle"
        android:text="@string/button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToNotifyButton" />


</androidx.constraintlayout.widget.ConstraintLayout>