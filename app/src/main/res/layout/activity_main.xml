<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/goToNotifyButton"
        android:layout_width="80dp"
        android:layout_height="61dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/gear_cog" />

    <ImageButton
        android:id="@+id/waterButton"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_below="@id/goToNotifyButton"
        android:layout_marginTop="70dp"
        android:background="@null"
        android:contentDescription="@string/water_me_button"
        android:scaleType="fitCenter"
        android:src="@drawable/button"
        android:text="@string/button" />

    <ImageView
        android:id="@+id/plant"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@id/waterButton"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="44dp"
        android:scaleType="fitCenter"
        android:src="@drawable/plant1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="600dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/week_progress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:text="@string/button" />

    </LinearLayout>


</RelativeLayout>